<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/one-page-wonder.css">  
	  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">

    {{!-- fontawesome glyphicons   --}}
    <script src="https://use.fontawesome.com/1971aa6d15.js"></script>
 
</head>
<body>

    <header class="masthead">
      <div class="overlay">
        <div class="container">
          <h1 class="display-1 text-white">NBA Talk</h1>
          <h3 class="display-4 text-white">NBA news for the homies</h2>
          <div id="ScrapeContainer">
            <button class="btn btn-success" id="ScrapeButton">Check for new articles</button>
          </div>
        </div>
      </div>
    </header>

    {{#each entry}}
    <section>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-sm-2">
          </div>
          <div class="col-sm-8">
            <div class="p-5">
              <h3>{{this.title}}</h3>
              <hr>
              <p class="text-muted">{{this.summary}}</p>
              </br>
              <a href="{{this.link}}" target="blank"> <button class="btn btn-outline-success btn-sm">View this article</button></a>
              <button type="button" id="CommentButton" class="btn btn-outline-primary btn-sm" data-id="{{this._id}}">View Comments <span class="badge badge-pill badge-warning">{{this.comments.length}}</span></button>
              <div id="CommentBox" class="d-none">
                <div class="rounded" id="CommentArea" data-id="{{this._id}}"></div>
                <form>
                  <div class="form-group">
                      <label for="Name">Name</label>
                      <input type="text" class="form-control" id="CommentNameInput" placeholder="Enter your name or a nickname">
                  </div>                  
                  <div class="form-group">
                    <label for="Comment">Comment: </label>
                    <div class="input-group">
                      <input class="form-control" id="CommentInput" type="text" placeholder="Say something...">
                      <span class="input-group-btn">
                      </span>
                    </div>
                  </div>
                </form>   
                  <button class="btn btn-outline-success" id="SubmitComment" data-id="{{this.id}}"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>                  
              </div>
            </div>
          </div>
          <div class="col-sm-2">
          </div>
        </div>
      </div>
    </section>
    {{/each}}




<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script src="/assets/javascript/index.js"></script>
    
</body>
</html>